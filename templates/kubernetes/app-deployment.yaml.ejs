apiVersion: apps/v1
kind: Deployment
metadata:
  name: <%= appName %>-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: <%= appName %>
  template:
    metadata:
      labels:
        app: <%= appName %>
    spec:
      containers:
        - name: <%= appName %>
          image: <%= registryUrl %>
          imagePullPolicy: Always
          ports:
            - containerPort: <%= containerPort %>
      imagePullSecrets:
        - name: <%= registryPullSecret %>
